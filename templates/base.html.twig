<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Application de gestion de tâches moderne et intuitive">
	<meta name="author" content="OpenClassrooms">
	<meta name="theme-color" content="#667eea">

	<title>{% block title %}To Do List app{% endblock %}</title>
	<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>✅</text></svg>">

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

	{{ importmap('app') }}

	{% block stylesheets %}{% endblock %}
	{% block javascripts %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-light navbar-fixed-top" role="navigation">
	<div class="container">
		<div class="navbar-header d-flex justify-content-between align-items-center">
			<div class="d-flex align-items-center">
				<a class="navbar-brand" href="{{ path('homepage') }}">
					<i class="fas fa-check-circle me-2"></i>To Do List app
				</a>
			</div>

			<img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms" class="navbar-logo" />
		</div>
	</div>
</nav>

<!-- Page Content -->
<div class="container main-content">
	<div class="row action-buttons">
		<div class="col-12 d-flex flex-wrap gap-2 justify-content-between align-items-center">
			<div class="left-actions">
				<a href="{{ path('user_create') }}" class="btn btn-primary">
					<i class="fas fa-user-plus me-1"></i>Créer un utilisateur
				</a>
			</div>

			<div class="right-actions">
				{% if app.user %}
					<span class="user-welcome me-3">
						<i class="fas fa-user me-1"></i>Bonjour, {{ app.user.username }}
					</span>
					<a href="{{ path('app_logout') }}" class="btn btn-danger">
						<i class="fas fa-sign-out-alt me-1"></i>Se déconnecter
					</a>
				{% endif %}

				{% if not app.user and 'app_login' != app.request.attributes.get('_route') %}
					<a href="{{ path('app_login') }}" class="btn btn-success">
						<i class="fas fa-sign-in-alt me-1"></i>Se connecter
					</a>
				{% endif %}
			</div>
		</div>
	</div>

	<div class="row notifications">
		<div class="col-md-12">
			{% for flash_message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">
					<i class="fas fa-check-circle me-2"></i>
					<strong>Superbe !</strong> {{ flash_message }}
				</div>
			{% endfor %}

			{% for flash_message in app.flashes('error') %}
				<div class="alert alert-danger" role="alert">
					<i class="fas fa-exclamation-circle me-2"></i>
					<strong>Oops !</strong> {{ flash_message }}
				</div>
			{% endfor %}

			{% for flash_message in app.flashes('info') %}
				<div class="alert alert-info" role="alert">
					<i class="fas fa-info-circle me-2"></i>
					{{ flash_message }}
				</div>
			{% endfor %}

			{% block header_title %}{% endblock %}
			{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list">{% endblock %}
		</div>
	</div>

	<div class="row main-body">
		<div class="col-md-12">
			{% block body %}{% endblock %}
		</div>
	</div>
</div>
<!-- /.container -->

<div class="container footer-container">
	<footer>
		<div class="row">
			<div class="col-lg-12 d-flex justify-content-between align-items-center">
				<div class="footer-info">
					<i class="fas fa-heart text-danger me-1"></i>
					Fait avec amour pour OpenClassrooms
				</div>
				<div class="footer-copyright">
					<i class="fas fa-copyright me-1"></i>
					Copyright &copy; {{ "now"|date("Y") }} OpenClassrooms
				</div>
			</div>
		</div>
	</footer>
</div>

<style>
	/* Styles additionnels pour le nouveau layout */
	body {
		font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.main-content {
		min-height: calc(100vh - 200px);
	}

	.action-buttons {
		margin-bottom: 1.5rem;
	}

	.user-welcome {
		color: var(--dark-color);
		font-weight: 500;
		background: rgba(255, 255, 255, 0.9);
		padding: 0.5rem 1rem;
		border-radius: 20px;
		backdrop-filter: blur(10px);
	}

	.navbar-logo {
		max-height: 40px;
		border-radius: 8px;
		box-shadow: 0 2px 8px rgba(0,0,0,0.1);
	}

	.footer-container {
		margin-top: auto;
	}

	.footer-info, .footer-copyright {
		font-size: 0.9rem;
		color: var(--dark-color);
	}

	.gap-2 {
		gap: 0.5rem;
	}

	.me-1 { margin-right: 0.25rem; }
	.me-2 { margin-right: 0.5rem; }
	.me-3 { margin-right: 1rem; }

	.d-flex { display: flex; }
	.flex-wrap { flex-wrap: wrap; }
	.justify-content-between { justify-content: space-between; }
	.justify-content-center { justify-content: center; }
	.align-items-center { align-items: center; }

	.text-danger { color: var(--danger-color) !important; }

	@media (max-width: 768px) {
		.left-actions, .right-actions {
			width: 100%;
			margin-bottom: 0.5rem;
		}

		.right-actions {
			justify-content: flex-start;
		}

		.user-welcome {
			display: block;
			margin-bottom: 0.5rem;
			text-align: center;
		}
	}
</style>
</body>
</html>
