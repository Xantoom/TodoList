{% extends 'base.html.twig' %}

{% block header_title %}
    <div class="login-header">
        <h1><i class="fas fa-sign-in-alt me-2"></i>Connexion</h1>
        <p>Connectez-vous pour accéder à vos tâches</p>
    </div>
{% endblock %}

{% block header_img %}{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-card">
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="login-form">
                <div class="form-group">
                    <label for="username">
                        <i class="fas fa-user me-1"></i>Nom d'utilisateur
                    </label>
                    <input type="text"
                           id="username"
                           name="_username"
                           value="{{ last_username }}"
                           class="form-control"
                           placeholder="Entrez votre nom d'utilisateur"
                           required />
                </div>

                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock me-1"></i>Mot de passe
                    </label>
                    <input type="password"
                           id="password"
                           name="_password"
                           class="form-control"
                           placeholder="Entrez votre mot de passe"
                           required />
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                <div class="form-actions">
                    <button class="btn btn-success btn-lg btn-block" type="submit">
                        <i class="fas fa-sign-in-alt me-1"></i>Se connecter
                    </button>
                </div>
            </form>

            <div class="login-footer">
                <p class="text-center">
                    <i class="fas fa-info-circle me-1"></i>
                    Pas encore de compte ?
                    <a href="{{ path('user_create') }}" class="text-primary">
                        Créer un utilisateur
                    </a>
                </p>
            </div>
        </div>
    </div>

<style>
    .login-header {
        text-align: center;
        margin-bottom: 2rem;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.1), rgba(34, 139, 34, 0.1));
        border-radius: var(--border-radius);
    }

    .login-header h1 {
        margin-bottom: 0.5rem;
        font-size: 2rem;
    }

    .login-header p {
        color: #666;
        margin: 0;
        font-size: 1.1rem;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 500px;
    }

    .login-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 2.5rem;
        width: 100%;
        max-width: 450px;
        transition: var(--transition);
    }

    .login-card:hover {
        box-shadow: var(--shadow-hover);
    }

    .login-form .form-group {
        margin-bottom: 1.5rem;
    }

    .login-form label {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 0.5rem;
        display: block;
        font-size: 1rem;
    }

    .login-form .form-control {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid #e9ecef;
        border-radius: var(--border-radius);
        font-size: 1rem;
        transition: var(--transition);
        background: rgba(255, 255, 255, 0.9);
    }

    .login-form .form-control:focus {
        border-color: var(--success-color);
        box-shadow: 0 0 0 0.2rem rgba(78, 205, 196, 0.25);
        background: white;
        outline: none;
    }

    .form-actions {
        margin-top: 2rem;
        margin-bottom: 1.5rem;
    }

    .btn-block {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .login-footer {
        border-top: 1px solid #eee;
        padding-top: 1.5rem;
        text-align: center;
    }

    .login-footer p {
        margin: 0;
        color: #666;
        font-size: 0.95rem;
    }

    .login-footer a {
        text-decoration: none;
        font-weight: 600;
        transition: var(--transition);
    }

    .login-footer a:hover {
        text-decoration: underline;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    .text-center {
        text-align: center;
    }

    @media (max-width: 768px) {
        .login-card {
            margin: 1rem;
            padding: 2rem;
        }

        .login-header {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .login-header h1 {
            font-size: 1.75rem;
        }
    }
</style>
{% endblock %}
