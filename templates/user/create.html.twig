{% extends 'base.html.twig' %}

{% block header_title %}
    <div class="form-header">
        <h1><i class="fas fa-user-plus me-2"></i>Créer un utilisateur</h1>
    </div>
{% endblock %}

{% block header_img %}{% endblock %}

{% block body %}
    <div class="form-container">
        <div class="form-card">
            {{ form_start(form, {'action' : path('user_create'), 'attr': {'class': 'modern-form'}}) }}
                <div class="form-content">
                    {{ form_widget(form) }}
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-user-check me-1"></i>Créer l'utilisateur
                    </button>
                    <a href="{{ path('user_list') }}" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left me-1"></i>Retour à la liste
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

<style>
    .form-header {
        text-align: center;
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, rgba(52, 152, 219, 0.1), rgba(41, 128, 185, 0.1));
        border-radius: var(--border-radius);
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 400px;
    }

    .form-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 2rem;
        width: 100%;
        max-width: 600px;
        transition: var(--transition);
    }

    .form-card:hover {
        box-shadow: var(--shadow-hover);
    }

    .modern-form .form-group {
        margin-bottom: 1.5rem;
    }

    .modern-form label {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 0.5rem;
        display: block;
        font-size: 1rem;
    }

    .modern-form .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #e9ecef;
        border-radius: var(--border-radius);
        font-size: 1rem;
        transition: var(--transition);
        background: rgba(255, 255, 255, 0.9);
    }

    .modern-form .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        background: white;
        outline: none;
    }

    .form-actions {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .form-actions .btn {
        flex: 1;
        min-width: 150px;
    }

    @media (max-width: 768px) {
        .form-card {
            margin: 1rem;
            padding: 1.5rem;
        }

        .form-actions .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }
    }
</style>
{% endblock %}
