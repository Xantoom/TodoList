{% extends 'base.html.twig' %}

{% block title %}Accueil - To Do List app{% endblock %}

{% block header_title %}
    <div class="hero-section text-center">
        <h1 class="hero-title">
            <i class="fas fa-tasks me-3"></i>
            Bienvenue sur Todo List
        </h1>
        <p class="hero-subtitle">L'application vous permettant de gérer l'ensemble de vos tâches sans effort !</p>
    </div>
{% endblock %}

{% block body %}
    <div class="row dashboard-actions">
        <div class="col-md-4 mb-3">
            <div class="action-card">
                <div class="action-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <h3>Nouvelle tâche</h3>
                <p>Créez rapidement une nouvelle tâche à accomplir</p>
                <a href="{{ path('task_create') }}" class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-1"></i>Créer une nouvelle tâche
                </a>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="action-card">
                <div class="action-icon">
                    <i class="fas fa-list-ul"></i>
                </div>
                <h3>Tâches à faire</h3>
                <p>Consultez toutes vos tâches en cours</p>
                <a href="{{ path('task_list') }}" class="btn btn-info btn-lg">
                    <i class="fas fa-eye me-1"></i>Consulter la liste des tâches à faire
                </a>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="action-card">
                <div class="action-icon">
                    <i class="fas fa-check-double"></i>
                </div>
                <h3>Tâches terminées</h3>
                <p>Voyez tout ce que vous avez accompli</p>
                <a href="{{ path('task_done_list') }}" class="btn btn-secondary btn-lg">
                    <i class="fas fa-trophy me-1"></i>Consulter la liste des tâches terminées
                </a>
            </div>
        </div>
    </div>

<style>
    .hero-section {
        margin: 3rem 0;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        border-radius: var(--border-radius);
        backdrop-filter: blur(10px);
    }

    .hero-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 0;
        font-weight: 400;
    }

    .dashboard-actions {
        margin-top: 2rem;
    }

    .action-card {
        background: white;
        border-radius: var(--border-radius);
        padding: 2rem;
        text-align: center;
        box-shadow: var(--shadow);
        transition: var(--transition);
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-hover);
    }

    .action-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: var(--primary-color);
    }

    .action-card h3 {
        color: var(--dark-color);
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .action-card p {
        color: #666;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

    @media (max-width: 768px) {
        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1rem;
        }

        .action-card {
            margin-bottom: 1rem;
        }
    }
</style>
{% endblock %}
